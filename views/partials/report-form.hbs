<div class="box">
  <h2 class="title is-5">Report</h2>
  <form action="/stations/{{stationId}}/reports" method="POST">
    <div class="columns is-mobile is-multiline">
      <div class="column is-12-mobile is-6-tablet is-3-desktop">
        <label class="label">Code</label>
        <div class="select is-fullwidth">
          <select name="code" required>
            {{#each weatherCodes}}
              <optgroup label="{{this.group}}">
                {{#each this.items}}
                  <option value="{{this.code}}" {{sel @root.selectedCode this.code}}>
                    {{this.label}} ({{this.code}})
                  </option>
                {{/each}}
              </optgroup>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="column is-6-mobile is-3-tablet is-2-desktop">
        <label class="label">Temp (Â°C)</label>
        <input class="input" type="number" step="0.1" name="temp" required value="{{prefill.temp}}">
      </div>

      <div class="column is-6-mobile is-3-tablet is-2-desktop">
        <label class="label">Wind Speed (m/s)</label>
        <input class="input" type="number" step="0.01" name="windSpeed" required value="{{prefill.windSpeed}}">
      </div>

      <div class="column is-6-mobile is-3-tablet is-2-desktop">
        <label class="label">Wind Direction</label>
        <div class="select is-fullwidth">
          <select name="windDirection" required>
            {{#each windDirs}}
              <option value="{{this}}" {{sel @root.selectedDir this}}>{{this}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="column is-6-mobile is-3-tablet is-2-desktop">
        <label class="label">Pressure (hPa)</label>
        <input class="input" type="number" step="1" name="pressure" required value="{{prefill.pressure}}">
      </div>
    </div>

    <div class="field is-grouped mt-2">
      <div class="control"><button class="button is-primary" type="submit">Add Report</button></div>
      <div class="control"><a class="button" href="/dashboard">Back</a></div>
    </div>
  </form>
</div>
