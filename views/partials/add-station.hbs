<div class="box">
  <h2 class="title is-5">Add Station</h2>
  <form action="/dashboard/stations" method="POST">
    <div class="columns is-multiline">
      <div class="column is-4">
        <label class="label">Name</label>
        <input class="input" type="text" name="name" required placeholder="e.g. Amsterdam">
      </div>
      <div class="column is-4">
        <label class="label">Latitude</label>
        <input class="input" type="number" step="0.000001" name="lat" required placeholder="52.3728">
      </div>
      <div class="column is-4">
        <label class="label">Longitude</label>
        <input class="input" type="number" step="0.000001" name="lng" required placeholder="4.8936">
      </div>
    </div>
    <button class="button is-primary" type="submit">Add Station</button>
  </form>
</div>
