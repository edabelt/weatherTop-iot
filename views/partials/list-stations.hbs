{{#each stations}}
  <div class="box">
    <div class="columns is-variable is-4 is-multiline">
      <div class="column is-12">
        <div class="buttons">
          <a class="button is-small" href="/stations/{{this.station._id}}">
            <span class="icon"><i class="fas fa-folder-open"></i></span>
            <span>Open</span>
          </a>
          <form action="/dashboard/stations/{{this.station._id}}/delete" method="POST" style="display:inline">
            <button class="button is-small is-danger" type="submit">
              <span class="icon"><i class="fas fa-trash"></i></span>
              <span>Delete</span>
            </button>
          </form>
        </div>
      </div>

      <div class="column is-12">
        {{> station-cards station=this.station live=this.live stats=this.stats}}
      </div>
    </div>
  </div>
{{/each}}
