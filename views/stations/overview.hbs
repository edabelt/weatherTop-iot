{{> menu user=user}}

<section class="section">
  <div class="container">
    <div class="level">
      <div class="level-left">
        <h1 class="title is-3 has-text-black has-text-weight-bold">Station – {{station.name}}</h1>
      </div>
      <div class="level-right">
        <a href="/stations/{{station._id}}" class="button is-primary">Back</a>
      </div>
    </div>

    <div class="columns is-variable is-6">
      <div class="column is-6">
        <div class="box">
          <div class="level mb-2">
            <div class="level-left">
              <p class="subtitle is-5">{{#if current}}{{current.when}}{{/if}}</p>
            </div>
          </div>
          <div class="level">
            <div class="level-left">
              <div>
                <p class="title is-1">{{#if current}}{{current.temp}}°C{{else}}--°C{{/if}}</p>
                <p class="is-size-6">
                  {{#if current}}Feels like {{current.feels}}°C. {{current.desc}}{{else}}No data{{/if}}
                </p>
                <ul class="mt-3">
                  <li class="mb-1">
                    {{#if current}}▼ {{current.windMs}} m/s {{current.windDir}} ({{current.windBft}} bft){{else}}—{{/if}}
                  </li>
                  <li class="mb-1">
                    {{#if current}}◎ {{current.pressure}} hPa{{else}}—{{/if}}
                  </li>
                </ul>
              </div>
            </div>
            <div class="level-right">
              {{#if current}}
                <figure class="image is-128x128">
                  <img alt="icon" src="{{iconUrl current.iconId}}">
                </figure>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <div class="column is-6">
        <div class="box">
          <div id="station-map" data-lat="{{map.lat}}" data-lng="{{map.lng}}" style="width:100%;height:320px"></div>
        </div>
      </div>
    </div>

    <div class="box">
      <h2 class="title is-5">Hourly forecast</h2>
      {{{hourlySvg}}}
    </div>

    <div class="box">
      <h2 class="title is-5">5-day outlook</h2>
      <div class="columns is-multiline">
        {{#each outlook}}
          <div class="column is-4-tablet is-2-desktop">
            <div class="card">
              <div class="card-content has-text-centered">
                <p class="is-size-6">{{this.key}}</p>
                <figure class="image is-64x64 is-inline-block">
                  <img alt="icon" src="{{../iconUrl this.iconId}}">
                </figure>
                <p class="mt-2">{{this.description}}</p>
                <p class="has-text-weight-semibold">{{this.max}}° / {{this.min}}°C</p>
              </div>
            </div>
          </div>
        {{/each}}
        {{#unless outlook.length}}
          <p class="has-text-grey">No forecast available.</p>
        {{/unless}}
      </div>
    </div>
  </div>
</section>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="/js/station-overview.js" defer></script>
